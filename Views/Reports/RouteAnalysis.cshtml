@model IEnumerable<CargoParcelTracker.ViewModels.RouteAnalysisViewModel>

@{
    ViewData["Title"] = "Route Analysis";
}

<div class="row mb-4">
    <div class="col-md-8">
        <h1 class="display-4">üó∫Ô∏è Route Analysis</h1>
        <p class="lead">Most common shipping routes with freight rate and transit time analysis</p>
    </div>
    <div class="col-md-4 text-end">
        <a asp-action="Index" class="btn btn-outline-secondary">‚Üê Back to Reports</a>
    </div>
</div>

<div class="row mb-4">
    <div class="col-12">
        <div class="alert alert-info">
            <strong>LINQ Query:</strong> <code>GroupBy()</code> with composite key (multiple fields),
            <code>SelectMany()</code> for allocations, and <code>OrderByDescending().ThenByDescending()</code>
        </div>
    </div>
</div>

@if (Model != null && Model.Any())
{
    <div class="row mb-3">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Route Network Summary</h5>
                    <span class="badge bg-light text-dark">@Model.Count() Routes</span>
                </div>
                <div class="card-body p-0">
                    <div class="row g-0">
                        <div class="col-md-3 border-end p-3 text-center">
                            <h6>Total Shipments</h6>
                            <h3>@Model.Sum(r => r.ShipmentCount)</h3>
                        </div>
                        <div class="col-md-3 border-end p-3 text-center">
                            <h6>Total Volume</h6>
                            <h3>@Model.Sum(r => r.TotalVolume).ToString("N0")</h3>
                            <small class="text-muted">barrels</small>
                        </div>
                        <div class="col-md-3 border-end p-3 text-center">
                            <h6>Avg Freight Rate</h6>
                            <h3>$@Model.Where(r => r.AverageFreightRate > 0).Average(r => r.AverageFreightRate).ToString("N2")</h3>
                        </div>
                        <div class="col-md-3 p-3 text-center">
                            <h6>Avg Transit Time</h6>
                            <h3>@Model.Where(r => r.AverageTransitDays > 0).Average(r => r.AverageTransitDays).ToString("F1")</h3>
                            <small class="text-muted">days</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Route Details</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-striped mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th>Route</th>
                            <th class="text-center">Shipments</th>
                            <th class="text-end">Total Volume (bbls)</th>
                            <th class="text-end">Avg Volume (bbls)</th>
                            <th class="text-end">Avg Freight Rate</th>
                            <th>Crude Grades</th>
                            <th class="text-center">Avg Transit Days</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var route in Model)
                        {
                            var shipmentClass = route.ShipmentCount switch
                            {
                                >= 10 => "table-success",
                                >= 5 => "table-info",
                                >= 3 => "table-warning",
                                _ => ""
                            };

                            <tr class="@shipmentClass">
                                <td>
                                    <div>
                                        <strong>@route.LoadingPort</strong>
                                        <br />
                                        <span class="text-muted">‚Üì</span>
                                        <br />
                                        <strong>@route.DischargePort</strong>
                                    </div>
                                    @if (route.ShipmentCount >= 10)
                                    {
                                        <span class="badge bg-success mt-1">Major Route</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-primary" style="font-size: 1rem;">@route.ShipmentCount</span>
                                </td>
                                <td class="text-end">
                                    <strong>@route.TotalVolume.ToString("N0")</strong>
                                </td>
                                <td class="text-end">
                                    @route.AverageVolume.ToString("N0")
                                </td>
                                <td class="text-end">
                                    @if (route.AverageFreightRate > 0)
                                    {
                                        <span>$@route.AverageFreightRate.ToString("N2")</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                                </td>
                                <td>
                                    @if (route.CrudeGrades.Any())
                                    {
                                        <div class="d-flex flex-wrap gap-1">
                                            @foreach (var grade in route.CrudeGrades)
                                            {
                                                <span class="badge bg-secondary">@grade</span>
                                            }
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                                </td>
                                <td class="text-center">
                                    @if (route.AverageTransitDays > 0)
                                    {
                                        var transitClass = route.AverageTransitDays switch
                                        {
                                            <= 5 => "text-success",
                                            <= 10 => "text-info",
                                            <= 15 => "text-warning",
                                            _ => "text-danger"
                                        };
                                        <span class="@transitClass">
                                            <strong>@route.AverageTransitDays</strong> days
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">Top 10 Routes by Volume</h5>
                </div>
                <div class="card-body">
                    @{
                        var topRoutes = Model.OrderByDescending(r => r.TotalVolume).Take(10);
                        var maxVolume = topRoutes.Max(r => r.TotalVolume);
                    }
                    @foreach (var route in topRoutes)
                    {
                        <div class="mb-3">
                            <div class="d-flex justify-content-between align-items-center mb-1">
                                <div>
                                    <strong>@route.Route</strong>
                                    <span class="badge bg-primary ms-2">@route.ShipmentCount shipments</span>
                                </div>
                                <span class="badge bg-dark">@route.TotalVolume.ToString("N0") bbls</span>
                            </div>
                            <div class="progress" style="height: 30px;">
                                <div class="progress-bar bg-gradient"
                                     role="progressbar"
                                     style="width: @((route.TotalVolume / maxVolume * 100).ToString("F1"))%">
                                    @if (route.AverageFreightRate > 0)
                                    {
                                        <span>Avg Rate: $@route.AverageFreightRate.ToString("N2")</span>
                                    }
                                    @if (route.AverageTransitDays > 0)
                                    {
                                        <span class="ms-2">| Transit: @route.AverageTransitDays days</span>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Fastest Routes</h5>
                </div>
                <div class="card-body">
                    <table class="table table-sm mb-0">
                        <thead>
                            <tr>
                                <th>Route</th>
                                <th class="text-center">Transit Days</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var route in Model.Where(r => r.AverageTransitDays > 0).OrderBy(r => r.AverageTransitDays).Take(5))
                            {
                                <tr>
                                    <td><small>@route.Route</small></td>
                                    <td class="text-center">
                                        <span class="badge bg-success">@route.AverageTransitDays days</span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">Most Expensive Routes</h5>
                </div>
                <div class="card-body">
                    <table class="table table-sm mb-0">
                        <thead>
                            <tr>
                                <th>Route</th>
                                <th class="text-end">Avg Freight Rate</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var route in Model.Where(r => r.AverageFreightRate > 0).OrderByDescending(r => r.AverageFreightRate).Take(5))
                            {
                                <tr>
                                    <td><small>@route.Route</small></td>
                                    <td class="text-end">
                                        <span class="badge bg-danger">$@route.AverageFreightRate.ToString("N2")</span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-warning">
        <h4 class="alert-heading">No Route Data</h4>
        <p class="mb-0">There are no shipping routes in the system to analyze.</p>
    </div>
}
