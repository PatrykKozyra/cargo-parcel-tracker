@model CargoParcelTracker.Models.CargoParcel

@{
    ViewData["Title"] = "Delete Cargo Parcel";
}

<h1>Delete Cargo Parcel</h1>
<hr />

<div class="alert alert-danger">
    <h4 class="alert-heading">Are you sure you want to delete this cargo parcel?</h4>
    <p>This action cannot be undone. All associated voyage allocations will also be deleted.</p>
</div>

<div class="card">
    <div class="card-header bg-danger text-white">
        <h4 class="mb-0">@Model.ParcelName</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Crude Grade</dt>
            <dd class="col-sm-9">@Model.CrudeGrade</dd>

            <dt class="col-sm-3">Quantity</dt>
            <dd class="col-sm-9">@Model.QuantityBbls.ToString("N0") barrels</dd>

            <dt class="col-sm-3">Route</dt>
            <dd class="col-sm-9">@Model.LoadingPort â†’ @Model.DischargePort</dd>

            <dt class="col-sm-3">Laycan</dt>
            <dd class="col-sm-9">@Model.LaycanStart.ToString("MMM dd") - @Model.LaycanEnd.ToString("MMM dd, yyyy")</dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">@Model.Status</dd>

            <dt class="col-sm-3">Created</dt>
            <dd class="col-sm-9">@Model.CreatedDate.ToString("MMMM dd, yyyy")</dd>
        </dl>

        @if (Model.VoyageAllocations != null && Model.VoyageAllocations.Any())
        {
            <div class="alert alert-warning mt-3">
                <strong>Warning:</strong> This parcel has @Model.VoyageAllocations.Count vessel allocation(s).
                All allocations will be permanently deleted.
            </div>
        }
    </div>
</div>

<form asp-action="Delete" method="post" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Confirm Delete</button>
    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Cancel</a>
    <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
</form>
