@model IEnumerable<CargoParcelTracker.ViewModels.PortActivityViewModel>

@{
    ViewData["Title"] = "Port Activity";
}

<div class="row mb-4">
    <div class="col-md-8">
        <h1 class="display-4">⚓ Port Activity Report</h1>
        <p class="lead">Loading and discharge operations by port location</p>
    </div>
    <div class="col-md-4 text-end">
        <a asp-action="Index" class="btn btn-outline-secondary">← Back to Reports</a>
    </div>
</div>

<div class="row mb-4">
    <div class="col-12">
        <div class="alert alert-info">
            <strong>LINQ Query:</strong> <code>SelectMany()</code> with <code>Distinct()</code>,
            Union of multiple <code>GroupBy()</code> operations, and complex port-based aggregations
        </div>
    </div>
</div>

@if (Model != null && Model.Any())
{
    <div class="row mb-3">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Port Network Summary</h5>
                    <span class="badge bg-light text-dark">@Model.Count() Ports</span>
                </div>
                <div class="card-body p-0">
                    <div class="row g-0">
                        <div class="col-md-3 border-end p-3 text-center">
                            <h6>Total Operations</h6>
                            <h3>@Model.Sum(p => p.TotalOperations)</h3>
                        </div>
                        <div class="col-md-3 border-end p-3 text-center">
                            <h6>Total Loaded</h6>
                            <h3>@Model.Sum(p => p.TotalVolumeLoaded).ToString("N0")</h3>
                            <small class="text-muted">barrels</small>
                        </div>
                        <div class="col-md-3 border-end p-3 text-center">
                            <h6>Total Discharged</h6>
                            <h3>@Model.Sum(p => p.TotalVolumeDischarged).ToString("N0")</h3>
                            <small class="text-muted">barrels</small>
                        </div>
                        <div class="col-md-3 p-3 text-center">
                            <h6>Avg Turnaround</h6>
                            <h3>@Model.Where(p => p.AverageTurnaroundDays > 0).Average(p => p.AverageTurnaroundDays).ToString("F1")</h3>
                            <small class="text-muted">days</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Port Activity Details</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-striped mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th>Port Name</th>
                            <th class="text-center">Loading Ops</th>
                            <th class="text-center">Discharge Ops</th>
                            <th class="text-center">Total Ops</th>
                            <th class="text-end">Volume Loaded (bbls)</th>
                            <th class="text-end">Volume Discharged (bbls)</th>
                            <th>Top Crude Grades</th>
                            <th class="text-center">Avg Turnaround</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var port in Model)
                        {
                            var operationClass = port.TotalOperations switch
                            {
                                >= 20 => "table-success",
                                >= 10 => "table-info",
                                >= 5 => "table-warning",
                                _ => ""
                            };

                            <tr class="@operationClass">
                                <td>
                                    <strong>@port.PortName</strong>
                                    @if (port.TotalOperations >= 20)
                                    {
                                        <span class="badge bg-success ms-2">High Activity</span>
                                    }
                                </td>
                                <td class="text-center">
                                    @if (port.LoadingCount > 0)
                                    {
                                        <span class="badge bg-primary">@port.LoadingCount</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td class="text-center">
                                    @if (port.DischargeCount > 0)
                                    {
                                        <span class="badge bg-info">@port.DischargeCount</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <strong>@port.TotalOperations</strong>
                                </td>
                                <td class="text-end">
                                    @if (port.TotalVolumeLoaded > 0)
                                    {
                                        @port.TotalVolumeLoaded.ToString("N0")
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td class="text-end">
                                    @if (port.TotalVolumeDischarged > 0)
                                    {
                                        @port.TotalVolumeDischarged.ToString("N0")
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (port.TopCrudeGrades.Any())
                                    {
                                        @foreach (var grade in port.TopCrudeGrades)
                                        {
                                            <span class="badge bg-secondary me-1">@grade</span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                                </td>
                                <td class="text-center">
                                    @if (port.AverageTurnaroundDays > 0)
                                    {
                                        var turnaroundClass = port.AverageTurnaroundDays switch
                                        {
                                            <= 5 => "text-success",
                                            <= 10 => "text-info",
                                            <= 15 => "text-warning",
                                            _ => "text-danger"
                                        };
                                        <span class="@turnaroundClass">
                                            <strong>@port.AverageTurnaroundDays.ToString("F1")</strong> days
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">Top Loading Ports</h5>
                </div>
                <div class="card-body">
                    @foreach (var port in Model.Where(p => p.LoadingCount > 0).OrderByDescending(p => p.LoadingCount).Take(5))
                    {
                        <div class="mb-3">
                            <div class="d-flex justify-content-between align-items-center mb-1">
                                <strong>@port.PortName</strong>
                                <span class="badge bg-primary">@port.LoadingCount operations</span>
                            </div>
                            <div class="progress" style="height: 25px;">
                                <div class="progress-bar bg-primary"
                                     role="progressbar"
                                     style="width: @((port.LoadingCount * 100.0 / Model.Max(p => p.LoadingCount)).ToString("F1"))%">
                                    @port.TotalVolumeLoaded.ToString("N0") bbls
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">Top Discharge Ports</h5>
                </div>
                <div class="card-body">
                    @foreach (var port in Model.Where(p => p.DischargeCount > 0).OrderByDescending(p => p.DischargeCount).Take(5))
                    {
                        <div class="mb-3">
                            <div class="d-flex justify-content-between align-items-center mb-1">
                                <strong>@port.PortName</strong>
                                <span class="badge bg-info">@port.DischargeCount operations</span>
                            </div>
                            <div class="progress" style="height: 25px;">
                                <div class="progress-bar bg-info"
                                     role="progressbar"
                                     style="width: @((port.DischargeCount * 100.0 / Model.Max(p => p.DischargeCount)).ToString("F1"))%">
                                    @port.TotalVolumeDischarged.ToString("N0") bbls
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-warning">
        <h4 class="alert-heading">No Port Activity Data</h4>
        <p class="mb-0">There are no port operations in the system to analyze.</p>
    </div>
}
