@{
    ViewData["Title"] = "Server Error";
}

<div class="container text-center" style="margin-top: 5rem;">
    <div class="row">
        <div class="col-12">
            <h1 class="display-1 text-danger">500</h1>
            <h2 class="display-4 mb-4">Internal Server Error</h2>
            <p class="lead mb-4">
                Oops! Something went wrong on our end. We're working to fix it.
            </p>
            <div class="mb-4">
                <svg xmlns="http://www.w3.org/2000/svg" width="200" height="200" fill="currentColor" class="text-danger" viewBox="0 0 16 16">
                    <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
                </svg>
            </p>
            <div class="alert alert-warning mx-auto" style="max-width: 600px;">
                <h5 class="alert-heading">What happened?</h5>
                <p class="mb-0">
                    An unexpected error occurred while processing your request.
                    Our team has been notified and is investigating the issue.
                </p>
            </div>
            <div class="mt-4">
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg">
                    <i class="bi bi-house"></i> Go to Home Page
                </a>
                <button onclick="location.reload()" class="btn btn-outline-secondary btn-lg">
                    <i class="bi bi-arrow-clockwise"></i> Try Again
                </button>
            </div>
        </div>
    </div>
</div>
