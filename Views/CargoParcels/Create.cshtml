@model CargoParcelTracker.ViewModels.CargoParcelViewModel

@{
    ViewData["Title"] = "Create Cargo Parcel";
}

<h1>Create New Cargo Parcel</h1>
<hr />

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="ParcelName" class="form-label"></label>
            <input asp-for="ParcelName" class="form-control" />
            <span asp-validation-for="ParcelName" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="CrudeGrade" class="form-label"></label>
            <input asp-for="CrudeGrade" class="form-control" placeholder="e.g., Brent Crude" />
            <span asp-validation-for="CrudeGrade" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="QuantityBbls" class="form-label"></label>
        <input asp-for="QuantityBbls" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="QuantityBbls" class="text-danger"></span>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="LoadingPort" class="form-label"></label>
            <input asp-for="LoadingPort" class="form-control" />
            <span asp-validation-for="LoadingPort" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="DischargePort" class="form-label"></label>
            <input asp-for="DischargePort" class="form-control" />
            <span asp-validation-for="DischargePort" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 mb-3">
            <label asp-for="LaycanStart" class="form-label"></label>
            <input asp-for="LaycanStart" class="form-control" type="date" />
            <span asp-validation-for="LaycanStart" class="text-danger"></span>
        </div>

        <div class="col-md-4 mb-3">
            <label asp-for="LaycanEnd" class="form-label"></label>
            <input asp-for="LaycanEnd" class="form-control" type="date" />
            <span asp-validation-for="LaycanEnd" class="text-danger"></span>
        </div>

        <div class="col-md-4 mb-3">
            <label asp-for="Status" class="form-label"></label>
            <select asp-for="Status" class="form-select" asp-items="Html.GetEnumSelectList<CargoParcelTracker.Models.CargoParcelStatus>()"></select>
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-primary">Create Parcel</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
