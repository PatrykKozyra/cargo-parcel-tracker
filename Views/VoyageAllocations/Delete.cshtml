@model CargoParcelTracker.Models.VoyageAllocation

@{
    ViewData["Title"] = "Delete Voyage Allocation";
}

<h1>Delete Voyage Allocation</h1>
<hr />

<div class="alert alert-danger">
    <h4 class="alert-heading">Are you sure you want to delete this voyage allocation?</h4>
    <p>This action cannot be undone.</p>
</div>

<div class="card">
    <div class="card-header bg-danger text-white">
        <h4 class="mb-0">Allocation Details</h4>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <h5>Cargo Parcel</h5>
                <p><strong>@Model.CargoParcel?.ParcelName</strong></p>
                <p class="small mb-0">Grade: @Model.CargoParcel?.CrudeGrade</p>
                <p class="small mb-0">Quantity: @Model.CargoParcel?.QuantityBbls.ToString("N0") bbls</p>
            </div>
            <div class="col-md-6">
                <h5>Vessel</h5>
                <p><strong>@Model.Vessel?.VesselName</strong></p>
                <p class="small mb-0">Type: @Model.Vessel?.VesselType</p>
                <p class="small mb-0">IMO: @Model.Vessel?.ImoNumber</p>
            </div>
        </div>

        <hr />

        <dl class="row mb-0">
            <dt class="col-sm-3">Loading Date</dt>
            <dd class="col-sm-9">@Model.LoadingDate.ToString("MMMM dd, yyyy")</dd>

            <dt class="col-sm-3">Discharge Date</dt>
            <dd class="col-sm-9">@Model.DischargeDate.ToString("MMMM dd, yyyy")</dd>

            <dt class="col-sm-3">Freight Rate</dt>
            <dd class="col-sm-9">$@Model.FreightRate.ToString("N4")/bbl</dd>

            <dt class="col-sm-3">Demurrage Rate</dt>
            <dd class="col-sm-9">$@Model.DemurrageRate.ToString("N2")/day</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" method="post" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Confirm Delete</button>
    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Cancel</a>
    <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
</form>
