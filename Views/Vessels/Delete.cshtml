@model CargoParcelTracker.Models.Vessel

@{
    ViewData["Title"] = "Delete Vessel";
}

<h1>Delete Vessel</h1>
<hr />

<div class="alert alert-danger">
    <h4 class="alert-heading">Are you sure you want to delete this vessel?</h4>
    <p>This action cannot be undone. Please confirm that you want to permanently delete this vessel.</p>
</div>

<div class="card">
    <div class="card-header bg-danger text-white">
        <h4 class="mb-0">@Model.VesselName</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">IMO Number</dt>
            <dd class="col-sm-9"><code>@Model.ImoNumber</code></dd>

            <dt class="col-sm-3">Vessel Type</dt>
            <dd class="col-sm-9">@Model.VesselType</dd>

            <dt class="col-sm-3">Deadweight Tonnage</dt>
            <dd class="col-sm-9">@Model.Dwt.ToString("N0") MT</dd>

            <dt class="col-sm-3">Current Status</dt>
            <dd class="col-sm-9">@Model.CurrentStatus</dd>
        </dl>

        @if (Model.VoyageAllocations != null && Model.VoyageAllocations.Any())
        {
            <div class="alert alert-warning mt-3">
                <strong>Warning:</strong> This vessel has @Model.VoyageAllocations.Count active voyage allocation(s).
                Deleting this vessel may affect these allocations.
            </div>
        }
    </div>
</div>

<form asp-action="Delete" method="post" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Confirm Delete</button>
    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Cancel</a>
    <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
</form>
