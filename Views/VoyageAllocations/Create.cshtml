@model CargoParcelTracker.ViewModels.VoyageAllocationViewModel

@{
    ViewData["Title"] = "Create Voyage Allocation";
}

<h1>Create Voyage Allocation</h1>
<p class="lead">Assign a vessel to a cargo parcel</p>
<hr />

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="ParcelId" class="form-label"></label>
            <select asp-for="ParcelId" class="form-select" asp-items="Model.AvailableParcels">
                <option value="">-- Select Cargo Parcel --</option>
            </select>
            <span asp-validation-for="ParcelId" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="VesselId" class="form-label"></label>
            <select asp-for="VesselId" class="form-select" asp-items="Model.AvailableVessels">
                <option value="">-- Select Vessel --</option>
            </select>
            <span asp-validation-for="VesselId" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="LoadingDate" class="form-label"></label>
            <input asp-for="LoadingDate" class="form-control" type="datetime-local" />
            <span asp-validation-for="LoadingDate" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="DischargeDate" class="form-label"></label>
            <input asp-for="DischargeDate" class="form-control" type="datetime-local" />
            <span asp-validation-for="DischargeDate" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="FreightRate" class="form-label"></label>
            <div class="input-group">
                <span class="input-group-text">$</span>
                <input asp-for="FreightRate" class="form-control" type="number" step="0.0001" />
                <span class="input-group-text">/bbl</span>
            </div>
            <span asp-validation-for="FreightRate" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="DemurrageRate" class="form-label"></label>
            <div class="input-group">
                <span class="input-group-text">$</span>
                <input asp-for="DemurrageRate" class="form-control" type="number" step="0.01" />
                <span class="input-group-text">/day</span>
            </div>
            <span asp-validation-for="DemurrageRate" class="text-danger"></span>
        </div>
    </div>

    <div class="alert alert-info">
        <strong>Note:</strong> Voyage duration must be between 3 and 60 days.
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-primary">Create Allocation</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
