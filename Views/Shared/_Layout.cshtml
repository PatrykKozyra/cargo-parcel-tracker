<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cargo Parcel Tracker</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-light">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    Cargo Parcel Tracker
                </a>
                <div class="navbar-menu">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Vessels" asp-action="Index">Vessels</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="CargoParcels" asp-action="Index">Cargo Parcels</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="VoyageAllocations" asp-action="Index">Voyages</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Reports" asp-action="Index">Reports</a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="Dashboard">Admin</a>
                            </li>
                        }
                    </ul>
                </div>
                <div class="navbar-user">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <div class="user-menu">
                            <div class="user-info">
                                <span class="user-avatar">@User.Identity.Name.Substring(0, 1).ToUpper()</span>
                                <div class="user-details">
                                    <span class="user-name">@User.Identity.Name</span>
                                    <span class="user-role">@(User.IsInRole("Admin") ? "Admin" : "Trader")</span>
                                </div>
                            </div>
                            <form asp-controller="Account" asp-action="Logout" method="post" class="logout-form">
                                <button type="submit" class="btn-logout">Sign Out</button>
                            </form>
                        </div>
                    }
                    else
                    {
                        <div class="auth-buttons">
                            <a class="btn-login" asp-controller="Account" asp-action="Login">Login</a>
                            <a class="btn-register" asp-controller="Account" asp-action="Register">Register</a>
                        </div>
                    }
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid px-4">
        <main role="main" class="py-4">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="container">
            &copy; 2025 Maritime Logistics Inc - Cargo Parcel Tracker | Powered by .NET 10 & EF Core
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
